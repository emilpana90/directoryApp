        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/red</item>

        <item name="android:textViewStyle">@style/TextStyle</item>
    </style>
</resources>
